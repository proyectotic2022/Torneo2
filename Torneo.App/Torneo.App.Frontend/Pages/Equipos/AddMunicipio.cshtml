@page
@model Torneo.App.Frontend.Pages.Equipos.AddMunicipioModel
@{
}
<h1>Asignar Municipio</h1>
<form method="post">
    <div class="form-group">
        <label for="idEquipo">Equipo</label>
        <input id="idEquipo" type="text" name="idEquipo" value="@Model.equipo.id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label for="idMunicipio">Municipio</label>
        <select name="idMunicipio" id="idMunicipio" class="form-control">
            @foreach (var municipio in Model.municipios)
            {
                <option value="@municipio.id">@municipio.nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Asignar Municipio</button>
</form>
<a asp-page="./Index" class="btn btn-secondary">Volver</a>