@page
@using Torneo.App.Dominio
@model Torneo.App.Frontend.Pages.Equipos.EditModel
@{
}
<h1>Editar equipos</h1>
<form method="post">
    <div class="form-group">
        <label for="idEquipo">Equipo</label>
        <input id="idEquipo" type="text" name="idEquipo" value="@Model.equipo.id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="equipo.id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="equipo.nombre"></label>
        <input asp-for="equipo.nombre" class="form-control">
        <span asp-validation-for="equipo.nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="idDirectorTecnico">Director Tecnico</label>
        <select name="idDirectorTecnico" id="idDirectorTecnico" class="form-control">
            @foreach (var directorTecnico in Model.directoresTecnicos)
            {
                <option value="@directorTecnico.id">@directorTecnico.nombre</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="idMunicipio">Municipio</label>
        <select name="idMunicipio" id="idMunicipio" class="form-control">
            @foreach (var municipio in Model.municipios)
            {
                <option value="@municipio.id">@municipio.nombre</option>
            }
        </select>
    </div>
    
    <button type="submit" class="btn btn-primary">Editar equipo</button>
</form>