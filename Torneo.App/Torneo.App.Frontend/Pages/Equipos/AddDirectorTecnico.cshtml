@page
@using Torneo.App.Dominio
@model Torneo.App.Frontend.Pages.Equipos.AddDirectorTecnicoModel
@{
}
<h1>Asignar director tecnico</h1>
<form method="post">
    <div class="form-group">
        <label for="id_equipo">Equipo</label>
        <input id="id_equipo" type="text" name="id_equipo" value="@Model.equipo.id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label for="id_DT">Director tecnico</label>
        <select name="id_DT" id="id_DT" class="form-control">
            @foreach (var directorTecnico in Model.directoresTecnicos)
            {
                <option value="@directorTecnico.id">@directorTecnico.nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Asignar director tecnico</button>
</form>
<a asp-page="./Index" class="btn btn-secondary">Volver</a>