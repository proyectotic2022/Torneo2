@page
@model Torneo.App.Frontend.Pages.Equipos.AddDesempenoModel
@{
}
<h1>Asignar Desempeño</h1>
<form method="post">
    <div class="form-group">
        <label for="idEquipo">Equipo</label>
        <input id="idEquipo" type="text" name="idEquipo" value="@Model.equipo.id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label for="idDesempeno">Desempeño</label>
        <select name="idDesempeno" id="idDesempeno" class="form-control">
            @foreach (var desempeno in Model.desempenos)
            {
                <option value="@desempeno.id">@desempeno.id</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Asignar Desempeño</button>
</form>
<a asp-page="./Index" class="btn btn-secondary">Volver</a>
