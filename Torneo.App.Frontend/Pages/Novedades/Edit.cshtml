@page
@using Torneo.App.Dominio
@model Torneo.App.Frontend.Pages.Novedades.EditModel
@{
}
<h1>Editar novedad</h1>
<form method="post">
    <div class="form-group">
        <label for="id_novedad">Jugador</label>
        <input id="id_novedad" type="text" name="id_novedad" value="@Model.novedad.id"  class="form-control" readonly>
    </div>
    <div class="form-group">
        <input type ="hidden" asp-for="novedad.id" class="form-control" readonly>
    </div>    
    <div class="form-group">
        <label asp-for="novedad.nombre"></label>
        <input asp-for="novedad.nombre" class="form-control">
        <span asp-validation-for="novedad.nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="novedad.minuto"></label>
        <input asp-for="novedad.minuto" class="form-control">
        <span asp-validation-for="novedad.minuto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="id_jugador">Equipo</label>
        <select name="id_jugador" id="id_jugador" class="form-control">
            @foreach (var jugador in Model.jugadores)
            {
                <option value="@jugador.id">@jugador.nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Editar novedad</button>
</form>
<a asp-page="./Index" class="btn btn-secondary">Volver</a>
