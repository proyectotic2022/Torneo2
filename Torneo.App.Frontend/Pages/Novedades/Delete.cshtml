@page
@using Torneo.App.Dominio
@model Torneo.App.Frontend.Pages.Novedades.DeleteModel
@{
}
<h1>Eliminar Novedad</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="novedad.id"></label>
        <input asp-for="novedad.id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="novedad.nombre"></label>
        <input asp-for="novedad.nombre" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="novedad.minuto"></label>
        <input asp-for="novedad.minuto" class="form-control" readonly>
    </div>    
    <div class="form-group">
        <label for="id_novedad">Equipo</label>
        <input asp-for="@Model.novedad.jugador.nombre" class="form-control" readonly>
    </div>
    <button type="submit" class="btn btn-primary" onclick="return confirm('Está seguro que desea eliminar el registro?')">Eliminar novedad</button>
</form>
<a asp-page="./Index" class="btn btn-secondary">Volver</a>