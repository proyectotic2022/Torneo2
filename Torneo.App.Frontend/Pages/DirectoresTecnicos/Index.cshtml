@page
@model Torneo.App.Frontend.Pages.DirectoresTecnicos.IndexModel
@{
}
<h1>Listado de Directores Tecnicos</h1>
<a class="btn btn-primary" style="background:blue" asp-page="./Create">Nuevo DirectorTecnico</a>
<form method="get">
  <div class="form-group">
    <label for="b">Buscar</label>
    <input name="b" id="b" class="form-control" asp-for="@Model.bActual">
  </div>
  <button type="submit" class="btn btn-primary">Buscar</button>
</form>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Documento</th>
      <th scope="col">Telefono</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
      @foreach(var directorTecnico in Model.directoresTecnicos)
      {
        <tr>
            <td>@directorTecnico.nombre</td>
            <td>@directorTecnico.documento</td>
            <td>@directorTecnico.telefono</td>
            <td>
                <a class="btn btn-primary" asp-page="./Details" asp-route-id="@directorTecnico.id">Detalle</a>
            </td>
        </tr>
      }
  </tbody>
</table> 