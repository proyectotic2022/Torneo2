@page
@using Torneo.App.Dominio
@model Torneo.App.Frontend.Pages.Jugadores.DeleteModel
@{
}
<h1>Eliminar Jugador</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="jugador.id"></label>
        <input asp-for="jugador.id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="jugador.nombre"></label>
        <input asp-for="jugador.nombre" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label for="id_equipo">Equipo</label>
        <input asp-for="@Model.jugador.equipo.nombre" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label for="id_posicion">Posicion</label>
        <input asp-for="@Model.jugador.posicion.nombre" class="form-control" readonly>
    </div>          
    <button type="submit" class="btn btn-primary" onclick="return confirm('Está seguro que desea eliminar el registro?')">Eliminar jugador</button>
</form>
<a asp-page="./Index" class="btn btn-secondary">Volver</a>
