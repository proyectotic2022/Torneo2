@page
@using Torneo.App.Dominio
@model Torneo.App.Frontend.Pages.Jugadores.CreateModel
@{
}
<h1>Nuevo jugador</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="jugador.nombre"></label>
        <input asp-for="jugador.nombre" class="form-control">
        <span asp-validation-for="jugador.nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="jugador.numero"></label>
        <input asp-for="jugador.numero" class="form-control">
        <span asp-validation-for="jugador.numero" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Crear jugador</button>
</form>
<a asp-page="./Index" class="btn btn-secondary">Volver</a>