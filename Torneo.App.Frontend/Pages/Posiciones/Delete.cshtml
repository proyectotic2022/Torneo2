@page
@using Torneo.App.Dominio
@model Torneo.App.Frontend.Pages.Posiciones.DeleteModel
@{
}
<h1>Eliminar Posición</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="posicion.id"></label>
        <input asp-for="posicion.id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="posicion.nombre"></label>
        <input asp-for="posicion.nombre" class="form-control" readonly>
    </div>
    <button type="submit" class="btn btn-primary" onclick="return confirm('Está seguro que desea eliminar el registro?')">Eliminar posicion</button>
</form>
<a asp-page="./Index" class="btn btn-secondary">Volver</a>