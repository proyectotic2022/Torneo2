@page
@using Torneo.App.Dominio
@model Torneo.App.Frontend.Pages.Posiciones.EditModel
@{
}
<h1>Editar posicion</h1>
<form method="post">
    <div class="form-group">
        <label for="posicion.id">Posicion</label>
        <input id="posicion.id" type="text" name="posicion.id" value="@Model.posicion.id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label for="posicion.nombre">Equipo</label>
        <select name="posicion.nombre" id="posicion.nombre" class="form-control">
            @foreach (var posicion in Model.posiciones)
            {
                <option value="@posicion.nombre">@posicion.nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Editar posicion</button>
</form>
<a asp-page="./Index" class="btn btn-secondary">Volver</a>
